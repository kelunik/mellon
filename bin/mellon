#!/usr/bin/env php
<?php

use Amp\Loop;
use Kelunik\Mellon\Mellon;

require __DIR__ . "/../vendor/autoload.php";

// It's important to catch SIGINT, so destructors can run and save data
Loop::onSignal(\SIGINT, function () {
    Loop::stop();

    exit(0);
});

Loop::run(function () {
    $mellon = new Mellon;
    $mellon->start();
});